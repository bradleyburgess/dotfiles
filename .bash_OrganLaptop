#!/bin/bash
# BASH aliases and variables for OrganLaptop

# ALIASES: ESUMC
# alias gobulletin="cd $(ls -d /mnt/c/Users/bburgess/Documents/bulletin/web-bulletin/* | grep -P '\d{4}' | sort -r | head -n 1)"
alias gohymns="cd /mnt/c/Users/bburgess/Documents/bulletin/lyhymns"
alias gohome="cd /mnt/c/Users/bburgess"
alias godeblocal='ssh deblocal'
alias godebremote='ssh debremote'
alias nvim='~/bin/neovim/usr/bin/nvim'
alias syncthing='~/bin/syncthing-windows-amd64-v1.6.1/syncthing.exe'

# PATH
export PATH=$PATH:~/.local/bin

# FUNCTIONS
function sshl {
  echo
  echo "SSH localhost port forwarding"
  echo "============================="
  echo
  echo -n "Host name: "
  read hostName
  echo -n "Remote port: "
  read remotePort
  echo -n "Local port (default = remote): "
  read localPort
  echo

  if [ $localPort -z ]
  then
    localPort=$remotePort
  fi

  echo "Connecting ..."
  echo

  ssh -L $localPort:localhost:$remotePort $hostName
}

# FUNCTION: ESUMC
function gobulletin {
  cd $(ls -d /mnt/c/Users/bburgess/Documents/bulletin/web-bulletin/* | grep -P '\d{4}' | sort -r | head -n 1)
}
